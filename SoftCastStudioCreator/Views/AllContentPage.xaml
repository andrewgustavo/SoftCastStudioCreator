<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SoftCastStudioCreator.Views.AllContentPage"
             Title="Conteúdos Criados">

    <!-- Cont�iner principal -->
    <StackLayout Padding="20">
        <!-- Exibi��o dos Conte�dos -->
            <CollectionView x:Name="ConteudosCollectionView" Margin="0,20,0,10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" CornerRadius="10" Padding="10" Margin="10">
                            <StackLayout>
                                <!-- Título do Conteúdo -->
                                <Label Text="{Binding Titulo}" FontSize="20" FontAttributes="Bold" />

                                <!-- Tipo de Conteúdo -->
                                <Label Text="{Binding Tipo}" FontSize="14" TextColor="Gray" />

                                <!-- Descrição -->
                                <Label Text="{Binding Descricao}" FontSize="14" TextColor="Black" />

                                <!-- Classificação Indicativa -->
                                <Label Text="{Binding ClassificacaoIndicativa}" FontSize="12" TextColor="Red" />

                                <!-- Botão de Editar Conteúdo -->
                                <Button Text="Editar" BackgroundColor="LightBlue" TextColor="White" 
                                    Clicked="OnEditarConteudoClicked" CommandParameter="{Binding ID}" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        <!-- Cadastrar Novo Conteúdo -->
            <Button Text="Incluir Novo Conteúdo" 
                    Clicked="OnNovoConteudoClicked" 
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Padding="20,10"
                    Margin="0,40,0,0">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup>
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="LightGray" />
                                        <Setter Property="BorderColor" Value="Gray" />
                                        <Setter Property="TextColor" Value="#512BD4"/>
                                        <Setter Property="FontAttributes" Value="Bold" />
                                        <Setter Property="BorderWidth" Value="2" />
                                        <Setter Property="CornerRadius" Value="5" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
             </Button>
            
            <!-- Voltar para a Dashboard -->
            <Button Text="Voltar a Dashboard" 
                    Clicked="OnVoltarClicked" 
                    BackgroundColor="Gray"
                    TextColor="White"
                    Margin="0,10,0,0"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Padding="20,10">
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroupList>
                        <VisualStateGroup>
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="White" />
                                    <Setter Property="BorderColor" Value="Lightgray" />
                                    <Setter Property="TextColor" Value="Gray"/>
                                    <Setter Property="FontAttributes" Value="Bold" />
                                    <Setter Property="BorderWidth" Value="2" />
                                    <Setter Property="CornerRadius" Value="7" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </VisualStateManager.VisualStateGroups>
             </Button>        
    </StackLayout>
</ContentPage>
