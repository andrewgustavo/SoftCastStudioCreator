<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SoftCastStudioCreator.Views.EditContentPage"
             Title="Editar Conteúdo">

    <StackLayout Padding="20">

        <!-- T�tulo do Conte�do -->
        <Entry x:Name="TituloEntry" 
               Placeholder="Título"
               Margin="0,10,0,0"/>

        <!-- Tipo do Conte�do -->
        <Entry x:Name="TipoEntry" 
               Placeholder="Tipo de Conteúdo"
               Margin="0,10,0,0"/>

        <!-- Descri��o do Conte�do -->
        <Editor x:Name="DescricaoEditor" 
                Placeholder="Descrição do Conteúdo" 
                Margin="0,10,0,0"
                HeightRequest="100"/>

        <!-- Classifica��o Indicativa -->
        <Entry x:Name="ClassificacaoEntry" 
               Margin="0,10,0,0"
               Placeholder="Classificação Indicativa" />

        <Label x:Name="SelectedVideo"
               Text="Nenhum vídeo selecionado"
               FontSize="14"
               TextColor="Gray"
               Padding="20,10"
               HorizontalOptions="Center" />

        <!-- Bot�o para salvar as altera��es -->
        <Button Text="Salvar Alterações" 
                Clicked="OnSaveClicked" 
                FontAttributes="Bold"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Padding="20,10"
                Margin="0,40,0,0">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroupList>
                    <VisualStateGroup>
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="PointerOver">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="LightGray" />
                                <Setter Property="BorderColor" Value="Gray" />
                                <Setter Property="TextColor" Value="#512BD4"/>
                                <Setter Property="FontAttributes" Value="Bold" />
                                <Setter Property="BorderWidth" Value="2" />
                                <Setter Property="CornerRadius" Value="5" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </VisualStateManager.VisualStateGroups>
        </Button>
        <!-- Bot�o para voltar � tela anterior -->
        <Button Text="Voltar" 
                Clicked="OnVoltarClicked"
                BackgroundColor="Gray"
                TextColor="White"
                Margin="0,10,0,0"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Padding="20,10">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroupList>
                    <VisualStateGroup>
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="PointerOver">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="White" />
                                <Setter Property="BorderColor" Value="Lightgray" />
                                <Setter Property="TextColor" Value="Gray"/>
                                <Setter Property="FontAttributes" Value="Bold" />
                                <Setter Property="BorderWidth" Value="2" />
                                <Setter Property="CornerRadius" Value="7" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </VisualStateManager.VisualStateGroups>
        </Button>
    </StackLayout>
</ContentPage>
